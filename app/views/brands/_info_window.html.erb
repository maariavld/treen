<% #if false %>
<div class="title">
  <div class="brand-image-popup">
    <%= cl_image_tag brand.photo.key, height: 75, width: 100, crop: :fill %>
  </div>
  <div>
    <%= link_to brand_path(brand) do %>
        <h2 class="brand_name"><%= brand.name %></h2>
    <% end %>
  <p><%= brand.address %></p>
  </div>
</div>
<br>

  <div class="icon">
      <% brand.brand_policies.each do |brand_policy|  %>
      <% if brand_policy.policy.title == "Vegan" %>
        <div class="brand-policy-icon">
          <%= image_tag "vegan-badge.png", width:50 %>
          <span class="badge badge-secondary" ><%= brand_policy.ranking %></span>
        </div>
      <% elsif  brand_policy.policy.title == "Carbon Footprint" %>
        <div class="brand-policy-icon">
          <%= image_tag "co2-badge.png", width:50 %>
          <span class="badge badge-secondary" ><%= brand_policy.ranking %></span>
        </div>
      <% elsif  brand_policy.policy.title == "Fair Trade" %>
        <div class="brand-policy-icon">
          <%= image_tag "fair-trade.png", width:50 %>
          <span class="badge badge-secondary" ><%= brand_policy.ranking %></span>
        </div>
      <% elsif  brand_policy.policy.title == "Organic Fabrics" %>
        <div class="brand-policy-icon">
          <%= image_tag "organic-badge.png", width:50 %>
          <span class="badge badge-secondary"><%= brand_policy.ranking %></span>
        </div>
      <% elsif  brand_policy.policy.title == "Good Cause" %>
        <div class="brand-policy-icon">
          <%= image_tag "good-badge.png", width:50 %>
          <span class="badge badge-secondary" ><%= brand_policy.ranking %></span>
        </div>
      <% elsif  brand_policy.policy.title == "Second Hand" %>
        <div class="brand-policy-icon">
          <%= image_tag "second-hand-badge.png", width:50 %>
          <span class="badge badge-secondary" ><%= brand_policy.ranking %></span>
        </div>
      <% end %>
    <% end %>
  </div>

<br>
<% if brand.reviews.empty? %>
  <h5>This brand has no reviews yet</h5>
<% else %>
<h5>Reviews</h5>
  <div class="text-muted mb-5">
    <div class="reviews d-flex">
      <% brand.reviews.each do |review| %>
        <div class="stars">
          <% review.rating.times do %>
            <i class="fa fa-star" aria-hidden="true" ></i>
          <% end %>
          <% (5- review.rating).times do %>
            <i class="fa fa-star-o" aria-hidden="true"></i>
          <% end %>
          <p><%= review.content %></p>
         <!--  <tr>
              <td><%#= link_to 'Edit', edit_brand_review_path(@brand, review) %></td>
              <td><%#= link_to 'Delete', @brand, method: :delete, data: { confirm: 'Are you sure?'} %></td>
          </tr> -->
        </div>
      <% end %>
    </div>
  </div>
<% end %>

